<h1>Users#show</h1>
<div class="container">
  <p><%= flash[:notice] %></p>
  <div class="row">
   <div class="col-md-4">
    <%= render 'users/info', user: @user %>

    <%= render 'books/new', book: @newbook %>
   </div><!-- col-md-4 -->

      <div class="col-md-8">
       <h1>Books</h1>
       <table>
        <thead>
         <tr>
          <th colspan="1"></th>
          <th>Title</th>
          <th>Opinion</th>
         </tr>
        </thead>

        <tbody>
         <% @books.each do |book| %>
         <tr>
          <td>
           <% if @user.profile_image.attached? %>
            <%= image_tag @user.profile_image, siza: "50x50" %>
           <% else %>
            <%= image_tag 'default-image.jpg', size: "50x50" %>
           <% end %>
          </td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
         </tr>
         <% end %>
        </tbody>
       </table>
      </div><!-- col-md-8 -->

  </div><!-- row -->
</div><!-- container -->