
<main>
 <p><%= flash[:notice] %></p>
 <div class="container px-5 px-sm-0">
  <div class="row">
   <div class="col-md-3">
    <%= render 'users/info', user: @user %>

    <%= render 'books/new', book: @newbook %>
   </div><!-- col-md-4 -->

      <div class="col-md-8 offset-md-1">
       <h1>Books</h1>
       <table>
        <thead>
         <tr>
          <th colspan="1"></th>
          <th>Title</th>
          <th>Opinion</th>
         </tr>
        </thead>

        <tbody>
         <% @books.each do |book| %>
         <tr>
          <td>
            <%= link_to user_path(@user.id) do %>
             <%= image_tag @user.get_profile_image %>
            <% end %>
          </td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
         </tr>
         <% end %>
        </tbody>
       </table>
      </div><!-- col-md-8 -->
  </div><!-- row -->
 </div><!-- container -->
</main>