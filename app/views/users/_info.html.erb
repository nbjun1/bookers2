
 <p><%= flash[:notice] %></p>
  <div class="row">
   <div class="col-md-4">
    <h1>User info</h1>
    <% if user.profile_image.attached? %>
     <%= image_tag user.profile_image, siza: "100x100" %>
    <% else %>
     <%= image_tag 'default-image.jpg', size: "100x100" %>
    <% end %>
    <table>
     <thead>
      <tr>
       <th>name</th>
       <th><%= user.name %></th>
      </tr>
     </thead>

     <tbody>
      <tr>
       <td>introduction</td>
       <td><%= user.introduction %></td>
      </tr>
     </tbody>
    </table>

    <div>
     <%= link_to edit_user_path(user.id), class: 'btn btn-outline-secondary btn-block' do %>
     <i class="fas fa-user-cog"></i>
     <% end %>
    </div>