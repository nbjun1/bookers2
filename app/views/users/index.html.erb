
<main>
 <p><%= flash[:notice] %></p>
 <div class="container px-5 px-sm-0">

  <div class="row">
   <div class="col-md-3">
    <%= render 'users/info', user: @infouser %>

    <%= render 'books/new', book: @newbook %>
   </div><!-- col-md-4 -->

      <div class="col-md-8 offset-md-1">
       <h1>Users</h1>
       <table>
        <thead>
         <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="1"></th>
         </tr>
        </thead>

        <tbody>
         <% @users.each do |user| %>
         <tr>
          <td>
           <% if user.profile_image.attached? %>
            <%= image_tag user.profile_image, siza: "50x50" %>
           <% else %>
            <%= image_tag 'default-image.jpg', size: "50x50" %>
           <% end %>
           </td>
          <td><%= user.name %></td>
          <td><%= link_to 'Show', user_path(id: user.id) %></td>
         </tr>
         <% end %>
        </tbody>
       </table>
      </div><!-- col-md-8 -->

  </div><!-- row -->
 </div><!-- container -->
</main>