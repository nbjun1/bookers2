
<h1>Books#show</h1>
<main>
<p><%= flash[:notice] %></p>
 <div class="container px-5 px-sm-0">
  <div class="row">
   <div class="col-md-3">
       <%= render 'users/info', user: @user %>

       <%= render 'books/new', book: @newbook %>
      </div><!-- col-md-4 -->

      <div class="col-md-8 offset-md-1">
       <h1>Book detail</h1>
       <table>
        <% if @book.user == current_user %>
        <thead>
         <tr>
          <th></th>
          <th colspan="2"></th>
          <th colspan="2"></th>
         </tr>
        </thead>

        <tbody>
         <tr>
          <td>
           <% if @user.profile_image.attached? %>
            <%= image_tag @user.profile_image, siza: "50x50" %>
           <% else %>
            <%= image_tag 'default-image.jpg', size: "50x50" %>
           <% end %>
           <p><%= link_to @user.name, user_path(@user.id) %></p></td>
          <td><%= link_to @book.title, book_path %></td>
          <td><%= @book.body %></td>

          <td><%= link_to 'Edit', edit_book_path(@book.id), class: 'btn btn-success' %></td>

          <td><%= link_to 'Destroy', @book, class: 'btn btn-danger', method: :delete, data: { confirm: "本当に消しますか？" } %></td>
         </tr>

        <% else @book.user == current_user %>
        <thead>
         <tr>
          <th></th>
          <th></th>
          <th></th>
         </tr>
        </thead>

        <tbody>
         <tr>
          <td>
           <% if @user.profile_image.attached? %>
            <%= image_tag @user.profile_image, siza: "50x50" %>
           <% else %>
            <%= image_tag 'default-image.jpg', size: "50x50" %>
           <% end %>
           <p><%= link_to @user.name, user_path(@user.id) %></p></td>
          <td><%= link_to @book.title, book_path %></td>
          <td><%= @book.body %></td>
         </tr>

        </tbody>
        <% end %>
       </table>
      </div><!-- col-md-8 -->

  </div><!-- row -->
 </div><!-- container -->
</main>