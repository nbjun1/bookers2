       <h1>Book detail</h1>
       <table>
        <thead>
         <tr>
          <th></th>
          <th colspan="2"></th>
          <th colspan="2"></th>
         </tr>
        </thead>

        <tbody>

         <tr>
          <td><%= @user.name %></td>
