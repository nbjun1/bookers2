
<h1>Books#show</h1>
<div class="container">

       <%= render 'users/info', user: @user %>

       <%= render 'books/new', book: @newbook %>
      </div><!-- col-md-4 -->

      <div class="col-md-8">
       <h1>Book detail</h1>
       <table>
        <% if @user.id == current_user.id %>
        <thead>
         <tr>
          <th></th>
          <th colspan="2"></th>
          <th colspan="2"></th>
         </tr>
        </thead>

        <tbody>
         <tr>
          <td>
           <% if @user.profile_image.attached? %>
            <%= image_tag @user.profile_image, siza: "50x50" %>
           <% else %>
            <%= image_tag 'default-image.jpg', size: "50x50" %>
           <% end %>
           <p><%= link_to @user.name, user_path(@user.id) %></p></td>
          <td><%= link_to @book.title, book_path %></td>
          <td><%= @book.body %></td>
          <td><%= link_to 'Edit', edit_book_path(@book.id) %></td>
          <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: "本当に消しますか？" } %></td>
         </tr>

        <% else @user.id == current_user.id %>
        <thead>
         <tr>
          <th></th>
          <th></th>
          <th></th>
         </tr>
        </thead>

        <tbody>
         <tr>
          <td>
           <% if @user.profile_image.attached? %>
            <%= image_tag @user.profile_image, siza: "50x50" %>
           <% else %>
            <%= image_tag 'default-image.jpg', size: "50x50" %>
           <% end %>
           <p><%= link_to @user.name, user_path(@user.id) %></p></td>
          <td><%= link_to @book.title, book_path %></td>
          <td><%= @book.body %></td>
         </tr>

        </tbody>
        <% end %>
       </table>
      </div><!-- col-md-8 -->

  </div><!-- row -->
</div><!-- container -->