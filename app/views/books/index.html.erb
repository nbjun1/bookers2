<h1>Books#index</h1>

<%= render 'users/info', user: @user %>

<%= render 'books/new', book: @book %>

<div class="col-md-8">
       <h1>Books</h1>
       <table>
        <thead>
         <tr>
          <th>Title</th>
          <th>Opinion</th>
         </tr>
        </thead>

        <tbody>
         <% @books.each do |book| %>
         <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
         </tr>
         <% end %>
        </tbody>
       </table>
      </div>

  </div>
</div>