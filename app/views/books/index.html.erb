<h1>Books#index</h1>
<div class="container">
 <% if @book.errors.any? %>

  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
   <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
   <% end %>
  </ul>
 <% end %>

 <p><%= flash[:notice] %></p>
  <div class="row">
   <div class="col-md-4">
    <%= render 'users/info', user: @user %>

    <%= render 'books/new', book: @book %>
   </div><!-- col-md-4 -->

      <div class="col-md-8">
       <h1>Books</h1>
       <table>
        <thead>
         <tr>
          <th colspan="1"></th>
          <th>Title</th>
          <th>Opinion</th>
         </tr>
        </thead>

        <tbody>
         <% @books.each do |book| %>
         <tr>
          <td>
            <%= link_to book_path(book.id) do %>
             <%= image_tag book.user.get_profile_image %>
            <% end %>

          </td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
         </tr>
         <% end %>
        </tbody>
       </table>
      </div><!-- col-md-8 -->
 </div><!-- row -->
</div><!-- container -->